@model IEnumerable<UtilityPaymentSystem.Domain.Entities.User>

<h1>Usuarios</h1>
<a asp-action="Create" class="btn btn-primary">Crear</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
