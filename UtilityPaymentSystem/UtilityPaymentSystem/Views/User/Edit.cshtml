@model UtilityPaymentSystem.Domain.Entities.User

<h1>Editar Usuario</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <div class="mb-3">
        <label for="Name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div class="mb-3">
        <label for="PasswordHash" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" value="@Model.PasswordHash" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

