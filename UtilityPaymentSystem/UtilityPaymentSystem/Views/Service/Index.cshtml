@model List<UtilityPaymentSystem.Controllers.Service>

<h1>Listado de Servicios</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceId</td>
                <td>@service.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@service.ServiceId">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@service.ServiceId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@service.ServiceId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Nuevo Servicio</a>
