@model IEnumerable<UtilityPaymentSystem.Domain.Entities.Service>

@{
    ViewData["Title"] = "Listado de Servicios";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Listado de Servicios</h1>

    <div class="text-end mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Servicio
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceId</td>
                    <td>@service.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@service.ServiceId" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Detalles
                        </a> |
                        <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a> |
                        <a asp-action="Delete" asp-route-id="@service.ServiceId" class="btn btn-danger btn-sm"
                           onclick="return confirm('¿Estás seguro de eliminar este servicio?')">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Incluir iconos de Bootstrap 5 para los botones *@
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
}
