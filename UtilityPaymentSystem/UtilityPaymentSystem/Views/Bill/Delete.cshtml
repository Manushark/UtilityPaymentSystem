@model UtilityPaymentSystem.Domain.Entities.Bill

<h1>Eliminar Factura</h1>
<p>¿Estás seguro de que deseas eliminar esta factura?</p>
<p><strong>ID:</strong> @Model.BillId</p>
<p><strong>Monto:</strong> @Model.Amount</p>
<p><strong>Fecha de Vencimiento:</strong> @Model.DueDate.ToString("dd/MM/yyyy")</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.BillId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
