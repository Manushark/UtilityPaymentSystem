@model IEnumerable<UtilityPaymentSystem.Domain.Entities.Bill>

@{
    ViewData["Title"] = "Lista de Facturas";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Create")" class="btn btn-primary">Crear Nueva Factura</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Servicio</th>
            <th>Monto</th>
            <th>Fecha de Vencimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillId</td>
                <td>@bill.UserId</td>
                <td>@bill.ServiceId</td>
                <td>@bill.Amount</td>
                <td>@bill.DueDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", new { id = bill.BillId })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = bill.BillId })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = bill.BillId })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

