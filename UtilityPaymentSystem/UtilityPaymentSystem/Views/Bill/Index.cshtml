@model IEnumerable<UtilityPaymentSystem.Domain.Entities.Bill>

<h1>Listado de Facturas</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Agregar Nueva Factura</a>
</div>

<form method="get">
    <label for="filter">Filtro:</label>
    <select id="filter" name="filter">
        <option value="all">Todas</option>
        <option value="paid">Pagadas</option>
        <option value="pending">Pendientes</option>
    </select>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Servicio</th>
            <th>Monto</th>
            <th>Fecha Vencimiento</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr class="@((!bill.IsPaid && bill.DueDate < DateTime.Now) ? "table-danger" : "")">
                <td>@bill.BillId</td>
                <td>@bill.UserId</td>
                <td>@bill.ServiceId</td>
                <td>@bill.Amount</td>
                <td>@bill.DueDate.ToString("dd/MM/yyyy")</td>
                <td>@(bill.IsPaid ? "Pagada" : "Pendiente")</td>
                <td>
                    @if (!bill.IsPaid)
                    {
                        <a asp-action="MarkAsPaid" asp-route-id="@bill.BillId" class="btn btn-success">Marcar como Pagada</a>
                    }
                    <a asp-action="Details" asp-route-id="@bill.BillId" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@bill.BillId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
