@model UtilityPaymentSystem.Domain.Entities.Bill

<h1>Detalles de Factura</h1>
<p><strong>ID:</strong> @Model.BillId</p>
<p><strong>Usuario:</strong> @Model.UserId</p>
<p><strong>Servicio:</strong> @Model.ServiceId</p>
<p><strong>Monto:</strong> @Model.Amount</p>
<p><strong>Fecha Vencimiento:</strong> @Model.DueDate.ToString("dd/MM/yyyy")</p>
<p><strong>Estado:</strong> @(Model.IsPaid ? "Pagada" : "Pendiente")</p>
<a asp-action="Index" class="btn btn-secondary">Regresar</a>
